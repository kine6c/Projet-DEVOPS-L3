pipeline {
    agent any
    
    stages {
        stage('Cloner le code') {
            steps {
                git 'https://github.com/kine6c/Projet-DEVOPS-L3.git'
            }
        }

        stage('Construire les conteneurs') {
            steps {
                script {
                    sh 'docker-compose build'
                }
            }
        }

        stage('DÃ©ployer l\'application') {
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}
